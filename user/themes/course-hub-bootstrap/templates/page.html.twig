{# new twig template file - hibbittsdesign.org #}
{% embed 'partials/base.html.twig' %}

  {% block content %}
    <div class="container">
      <div class="row">
        {# check content display flag - hibbittsdesign.org #}
        {% if not grav.uri.param('onlydisplaypagecontent') %}
          <div class="col-sm-8 blog-main">
          {% else %}
            <div class="col-sm-12 blog-main">
            {% endif %}
            <h3>{{page.title}}</h3>
            {{ page.content }}
            <hr>
            {# GitHub link - hibbittsdesign.org #}
            {% if config.site.github.location == 'page' %}
              <br>
              {% include 'partials/github_page_link.html.twig' %}
              <br>
            {% endif %}
          </div>
          {# check content display flag - hibbittsdesign.org #}
          {% if not grav.uri.param('onlydisplaypagecontent') %}
            <div class="col-sm-4 blog-sidebar">
              {# {% include 'partials/sidebar.html.twig' with {'blog':page} %} #}
              {# display sidebar markdown page as sidebar - hibbittsdesign.org #}
              {% set content = pages.find('/sidebar').content %}
              {% if content %}
                <div class="sidebar">
                  {{ content }}
                  {% if config.plugins.feed.enabled and config.site.rssbutton.display %}
                    {% include 'partials/rss_link.html.twig' %}
                  {% endif %}
                </div>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    {% endblock %}

  {% endembed %}
